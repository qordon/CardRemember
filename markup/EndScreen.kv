<EndScreen>:
    orientation: 'vertical'

    right_percent: right_percent
    right_expected_choices_percent: right_expected_choices_percent
    right_answers_label: right_answers_label
    right_expected_choices_label: right_expected_choices_label
    choice_label: choice_label
    expected_choice_label: expected_choice_label
    probability_label: probability_label

    canvas.before:
        Color:
            rgba: 26/255, 161/255, 40/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        spacing: 15
        BoxLayout:
            size_hint: [1, .4]
            orientation: 'vertical'
            padding: [0, 0, 0, 10]
            Label:
                text: "Статистика"
                font_size: 24
                font_name: 'Roboto'
                size_hint: [1, .7]
            BoxLayout:
                orientation: 'vertical'
                padding: [10, 0]
                GridLayout:
                    cols: 2
                    spacing: 15
                    Label:
                        id: right_answers_label
                        # text: "Верных ответов:"
                        font_size: 18
                        font_name: 'Roboto'
                        text_size: self.size
                    Label:
                        id: right_percent
                        font_size: 18
                        font_name: 'Roboto'
                        size_hint: [.4, 1]
                        text_size: self.size
                GridLayout:
                    cols: 2
                    spacing: 15
                    Label:
                        id: right_expected_choices_label
                        text: ""
                        font_size: 18
                        font_name: 'Roboto'
                        text_size: self.size
                    Label:
                        id: right_expected_choices_percent
                        font_size: 18
                        font_name: 'Roboto'
                        size_hint: [.4, 1]
                        text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: [10, 0]
            BoxLayout:
                size_hint: [1, .05]
                GridLayout:
                    cols: 5
                    rows: 1
                    Label:
                        text: "№"
                        font_name: 'Roboto'
                        size_hint: [.3, 1]
                    Label:
                        size_hint: [.8, 1]
                        text: ""
                    Label:
                        id: choice_label
                        font_name: 'Roboto'
                    Label:
                        id: expected_choice_label
                        font_name: 'Roboto'
                        halign: 'center'
                        valign: 'middle'
                        pos_hint: {'center_x': 0.5, 'center_y': .5}
                    Label:
                        id: probability_label
                        font_name: 'Roboto'
            BoxLayout:
                ScrollView:
                    size_hint: [1, 1]
                    do_scroll_x: False
                    do_scroll_y: True
                    bar_width: 2
                    GridLayout:
                        id: results
                        cols: 1
                        spacing: 10
                        size_hint_y: None
                        height: self.minimum_height
                        row_default_height: 150

        BoxLayout:
            size_hint: [1, .5]
            spacing: 75
            padding: [80, 50, 80, 50]
            RoundedButton:
                on_release: root.manager.current = 'menu'
                Image:
                    source: "images/icons/menu.png"
                    size: self.parent.width - 10, self.parent.height - 10
                    pos: self.parent.x + 5, self.parent.y + 5

            RoundedButton:
                on_release: root.repeat_game()
                Image:
                    source: "images/icons/repeat.png"
                    size: self.parent.width - 10, self.parent.height - 10
                    pos: self.parent.x + 5, self.parent.y + 5