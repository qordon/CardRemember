<ChoiceBanner@BoxLayout>:
    card_image: card_image
    choice: choice
    expected_choice: expected_choice
    probability: probability
    number_of_card: number_of_card
    minimum_height: self.height
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 26/255, 161/255, 40/255, 1
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        Label:
            id: number_of_card
            text: "1"
            size_hint: [.3, 1]
        BoxLayout:
            size_hint: [.8, 1]
            Image:
                id: card_image
                source: ""
                size_hint: [.7, .7]
                pos_hint: {'center_x': 0.5, 'center_y': .5}

        Image:
            id: choice
            source: "images/icons/equal.png"
        Image:
            id: expected_choice
            source: "images/icons/equal.png"
        Label:
            id: probability
            text: ""

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (140/255, 140/255, 140/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [15]