<MenuScreen>:
    orientation: 'vertical'
    start_label: start_label
    rules_label: rules_label
    canvas.before:
        Color:
            rgba: 26/255, 161/255, 40/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 3

        BoxLayout:
            size_hint: [1, .6]
            padding: [0, 50, 0, 0]
            Label:
                font_size: 43
                text: "Card Remember"

        BoxLayout:
            orientation: 'vertical'
            size_hint: [1, 1]
            padding: [0, 0, 0, 0]
            Image:
                source: "images/icons/aces.png"
                size_hint_x: .8
                pos_hint: {'center_x': 0.5, 'center_y': 0}

        BoxLayout:
            orientation: 'vertical'
            size_hint: [1, 1]
            padding: [40, 10, 40, 100]
            spacing: 20
            RoundedButton:
                id: start_label
                text: ""
                font_size: 36
                font_name: 'Roboto'
                size_hint_x: .5
                size_hint_y: .5
                pos_hint: {'center_x': 0.5, 'center_y': 1}

                on_release:
                    root.start()
            RoundedButton:
                id: rules_label
                text: ""
                font_size: 34
                font_name: 'Roboto'
                size_hint_x: .5
                size_hint_y: .5
                pos_hint: {'center_x': 0.5, 'center_y': 1}

                on_release:
                    root.go_to_description_page()




